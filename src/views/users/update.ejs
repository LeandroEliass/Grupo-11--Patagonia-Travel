    <body> 
        <%- include ("../partials/header.ejs") %> 
    
        <main>
            <section class="principal">
                <section class="flex-container">
                    
                    
                    <form class="form-register"  action="/users/<%= user.id %>/update?m=PUT" method="post">           
                        <fieldset class="form-fieldset">
                            <legend class="dn">Nombre</legend>
                            <label class="" for="nombreCompleto">Nombre</label>
                            <input class="form-fieldset-input" type="text" id="name" name="name" value=" <%= user.name %>  ">
                            <% if (locals.errors && errors.name) { %>
                            
                                <p class="text-danger"> <%= errors.name.msg  %> </p>
                                
                                   <% } %>
                        </fieldset>
    
                        <fieldset class="form-fieldset">
                            <legend class="dn">Apellido</legend>
                            <label class="" for="apellido">Apellido</label>
                            <input class="form-fieldset-input" type="text" id="lastName" name="lastName" value=" <%= user.last_name %>  ">
                            <% if (locals.errors && errors.lastName) { %>
                            
                                <p class="text-danger"> <%= errors.lastName.msg  %> </p>
                                
                                   <% } %>
                        </fieldset>
    
                        <fieldset class="form-fieldset">
                            <legend class="dn">Fecha de Nacimiento</legend>
                            <label for="fecha">Fecha de Nacimiento</label>
                            <input class="form-fieldset-input" type="date" id="fechaNac" name="fechaNac" value=" <%= user.date_birth %>  ">
                            <% if (locals.errors && errors.fechaNac) { %>
                            
                                <p class="text-danger"> <%= errors.fechaNac.msg  %> </p>
                                
                                   <% } %>
                        </fieldset>
    
