                        <fieldset class="form-fieldset">
                            <legend class="dn">Contraseña</legend>
                            <label for="clave">Contraseña</label>
                            <input class="form-fieldset-input" type="password" name="password" id="password"  placeholder="**********" >
                            <% if (locals.errors && errors.password) { %>
                            
                                <p class="text-danger"> <%= errors.password.msg  %> </p>
                                
                                   <% } %>
                        </fieldset>
    
                        <fieldset class="form-fieldset">
                            <legend class="dn">Confirmar Contraseña</legend>
                            <label for="clave">Confirmar Contraseña</label>
                            <input class="form-fieldset-input" type="password" name="rPassword" id="rPassword" placeholder="**********" >
                        </fieldset>
    
                        <div>
                            <label for="terminosCodiciones">Terminos y Codiciones
                                <input class="" type="Checkbox" name="terminosCodiciones" id="terminos"  >
                                </label>                 
                        </div>
    
                        <div>
                            <label  for="ofertasDescuentos">Desea recibir noticias vía email
                                <input class="" type="Checkbox" name="ofertasDescuentos" id="ofertas"  >
                                </label>
                        </div>               
    
                        <fieldset class="form-fieldset">
                            <legend class="dn">Foto del Usuario</legend>
                            <label for="foto" name="file">Foto del Usuario</label>
                            
                             
                            
                            <input class="form-fieldset-input" type="file" name="file" accept=".jpeg, .png, .svg " id="file"  >
                           
                        </fieldset>
    
                        <fieldset class="form-fieldset-buttons">
                            <legend class="dn">Botones del Formulario</legend>
                            <button class="buttons" type="submit">Actualizar</button>
                            <button class="buttons" type="reset">Limpiar</button>
                        </fieldset> 
                             
                    </form>
                    
                </section>      
            </section>
    
